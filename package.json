{
  "name": "suvidha-kiosk",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "npm run db:generate && turbo run build --filter=@suvidha/api",
    "lint": "turbo lint",
    "test": "turbo test",
    "db:push": "cd packages/database && npx prisma db push",
    "db:migrate": "cd packages/database && npx prisma migrate dev",
    "db:studio": "cd packages/database && npx prisma studio",
    "db:generate": "cd packages/database && npx prisma generate",
    "db:seed": "cd packages/database && npx tsx prisma/seed.ts"
  },
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma",
    "seed": "npx tsx packages/database/prisma/seed.ts"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0",
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18"
  }
}